<% var group = (data.activity['oae:activityType'] === 'group-create') ? data.activity.object : data.activity.target %>
<p>
    Hi,
</p>
<p>
    <%= util.sanitization.encodeForHTML(data.activity.actor.displayName) %> has added you to the group: "<%= util.sanitization.encodeForHTML(group.displayName) %>".
</p>
<p>
    You may find it by following this link:
    <a href="<%= group.url %>" title="Go to <%= util.sanitization.encodeForHTMLAttribute(group.displayName) %>">
        <%= group.url %>
    </a>
</p>
